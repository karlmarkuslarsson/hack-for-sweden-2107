<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dialog_default_margin"
        android:layout_marginRight="@dimen/dialog_default_margin"
        android:layout_marginTop="@dimen/dialog_default_margin"
        android:text="What is your currency?"
        android:textColor="@color/black"
        android:textSize="@dimen/dialog_default_title_size" />

    <View
        android:id="@+id/dialog_upper_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dialog_default_margin"
        android:layout_marginRight="@dimen/dialog_default_margin"
        android:layout_marginTop="10dp"
        android:background="@color/divider" />

    <ScrollView
        android:id="@+id/dialog_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RadioGroup
            android:id="@+id/dialog_currency_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>

    <View
        android:id="@+id/dialog_lower_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/dialog_default_margin"
        android:layout_marginRight="@dimen/dialog_default_margin"
        android:background="@color/divider" />

    <include layout="@layout/dialog_cancel_ok" />


</LinearLayout>