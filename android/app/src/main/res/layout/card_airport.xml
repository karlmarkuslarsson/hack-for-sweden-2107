<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/card_base_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="From Arlanda"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/pinkPrimaryDark" />

        <include layout="@layout/card_airport_part" android:id="@+id/line1"/>
        <include layout="@layout/card_airport_part" android:id="@+id/line2"/>
        <include layout="@layout/card_airport_part" android:id="@+id/line3"/>
    </LinearLayout>


</android.support.v7.widget.CardView>